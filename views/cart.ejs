    <%- include('partials/navbar') %>
    <div class="cart">
      <div class="head top">Shopping Cart Is empty!</div>
      <div class="head">BROWSE CATEGORIES</div>
      <div class="categories">
        <div class="col">
          <div>- Appliances</div>
          <div>- Cameras & Accessories</div>
          <div>- Gaming</div>
          <div>- Men's Clothing</div>
          <div>- Tablets & Accessories</div>
        </div>
        <div class="col">
          <div>- Baby & Kids</div>
          <div>- Daily Needs</div>
          <div>- Jewellery</div>
          <div>- Mobile Accessories</div>
          <div>- TV, Audio & Video</div>
        </div>
        <div class="col">
          <div>- Beauty & Personal Care</div>
          <div>- Furnishing</div>
          <div>- Kitchenware</div>
          <div>- Mobile Phones</div>
          <div>- Women's Ethnic Wear</div>
        </div>
        <div class="col">
          <div>- Books</div>
          <div>- Furniture</div>
          <div>- Laptops & Computers</div>
          <div>- Nutrition & Suppliments</div>
          <div>- Women's Western Wear</div>
        </div>
      </div>
      <button>START SHOPPING NOW</button>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
