    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500&display=swap"
      rel="stylesheet"
    />
    <style>
      .cart {
        margin: auto;
        width: 1000px;
        text-align: center;
        margin-top: 64px;
      }
      .head {
        font-size: 20px;
        font-family: "Quicksand", sans-serif;
        font-weight: 500;
        color: #868e96;
      }
      .top {
        margin-bottom: 50px;
      }
      .categories {
        text-align: left;
        display: flex;
        gap: 12%;
        margin-top: 50px;
      }
      .categories div {
        cursor: pointer;
        margin-bottom: 16px;
        color: #495057;
      }
      button {
        color: #fff;
        background-color: #d9480f;
        border: none;
        font-size: 20px;
        padding: 10px 24px;
      }
    </style>
